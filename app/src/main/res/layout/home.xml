<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/home_buttom_ll"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:background="@color/colorWhite"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/home_buttom_one_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/home_buttom_one_iv"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/home_buttom_one" />

                <TextView
                    android:id="@+id/home_buttom_one_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_below="@id/home_buttom_one_iv"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="资讯" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_buttom_two_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/home_buttom_two_iv"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/home_buttom_two" />

                <TextView
                    android:id="@+id/home_buttom_two_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/home_buttom_two_iv"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="热点" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_buttom_three_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/home_buttom_three_iv"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/home_buttom_three" />

                <TextView
                    android:id="@+id/home_buttom_three_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/home_buttom_three_iv"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="搜索" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/home_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/home_buttom_ll"></RelativeLayout>

</RelativeLayout>